@model DAL.Personne
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert-success" style="font-size:16px; font-weight:bold;margin-top:100px;">

    <center>
        <div class="alert-warning">
            Pas de panique @Html.DisplayFor(m => m.Nom), nous arrivons!!!
        </div>

        @{
            if (ViewBag.step == 1)
            {
                Html.RenderPartial("_geoloc");
            }
            if(ViewBag.step==2)
            {
                Html.RenderPartial("_google");
            }
            else
            {
                Html.RenderPartial("_geoLocGoogleItineraire");
            }
        }
    </center>
</div>